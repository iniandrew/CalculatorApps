<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="ResultText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">64sp</item>
        <item name="android:maxLength">12</item>
    </style>

    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">#607D8B</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Button.operator">
        <item name="android:background">#ECEFF1</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Button.operator.clear">
        <item name="android:background">#ECEFF1</item>
        <item name="android:textColor">#FF5722</item>
    </style>

    <style name="Button.number">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Button.equal">
        <item name="android:background">#FF5722</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
</resources>
